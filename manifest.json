{
    "manifest_version": 3,
    "name": "ALLaMa",
    "version": "1.0",
    "description": "Show tooltip with API data on selected text",
    "permissions": [
      "contextMenus",
      "activeTab",
      "tabs",
      "scripting",
      "storage",
      "commands",
      "notifications"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "show_tooltip": {
        "suggested_key": {
          "default": "Ctrl+Shift+Z",
          "mac": "Command+Shift+Z"
        },
        "description": "Show tooltip for selected text"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["lib/marked.min.js", "content.js"],
        "css": ["style.css", "info.css"],
        "run_at": "document_idle"
      }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
      "default_popup": "",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "options_page": "options.html",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.png",
                "icons/*.webp"
            ],
            "matches": ["<all_urls>"]
        }
    ]
  }